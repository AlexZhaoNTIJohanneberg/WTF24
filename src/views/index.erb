<div id="hd"> 

    <div id="categories">
        <h2> Categories </h2>
        <% @categories.each do |category| %>
            <div class="category">
                <a href="/everydaymart/<%= category['id'] %>"><%= category['name'] %></a>
            </div>
        <% end %>
    </div>
    
</div>


<h2> Products </h2>
<% @products.each do |product|%>
    <div class="products">
        <a href="/everydaymart/<%= product['category_id'] %>/<%= product['id'] %>"><%= product['name'] %></a>
    </div>
<% end %>